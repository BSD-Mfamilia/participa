<% content_for :title, t("devise.titles.sign_in") %>

<div class="main-login">
  <div class="content-content-home">

    <div class="row">
      <div class="login-texto-contenedor">
        <article class="intro login-texto">
        <h1>Bienvenido a <br/> Más Madrid</h1>
        <h4>Participa, suma, decide, <br> Manuela e Íñigo te necesitan</h4>
        <p>Ya somos
          <span>
            <% cache("total_users", expires_in: 30.minutes) do %>
              <%= number_with_delimiter User.confirmed.count %>
            <% end %>
          </span>
          personas inscritas.</p>
          <div class="buttonbox">
            <%= link_to "Únete", new_user_registration_path, class: 'boton-unete' %>
          </div>
        </article><!--.intro-->

      </div><!--login-texto-contenedor-->
      <div class="login-form-contenedor">
        <div class="login-form relieve rel-bot-right">
          <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>

            <fieldset>
              <legend>
                <%= t('devise.links.sign_in') %>
              </legend>
              <div>
                <%= f.text_field :login, autofocus: true, class: 'input-100', placeholder: 'E-mail ' %>
              </div>
              <div>
                <%= f.password_field :password, class: 'input-100', placeholder: 'Contraseña' %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="remember">
                  <%= f.check_box :remember_me, class: 'remember checkbox' %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <div class="enter">
                <%= f.submit t('devise.buttons.sign_in'), class: 'boton1' %>
              </div>
            </fieldset>
            <p>
              <%= link_to t("devise.links.forgot_password"), new_password_path(resource_name) %>
            </p>
          <% end %>
        </div><!--.login-form relieve rel-bot-right-->
      </div><!--.login-form-contenedor-->¡

    </div><!--.row-->

  </div><!--.content-content-->
</div><!--#content-->
